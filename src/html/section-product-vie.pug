mixin star
  svg.svg__star
    use(xlink:href="images/icons/icons.svg#Star")

mixin page-product(prodName,prodCost,sizes,NumberOfcustRev,shortDesc,sku,categories,tags,commonDescr,commonDescrAdded,livingRoomDescr,diningRoomDescr,officeRoomDescr)
  section.section-outer.page-product
    .page-product__nav-wrapper
      div.page-product__main-section Home / 
      div.page-product__subsection !{'&nbsp'}Shop / !{'&nbsp'}
      div.page-product__subsection= prodName
    .page-product__wrapper
      .page-product__slider-wrapper
        .product-slider__secondary-slides-wrapper
          img.product-slider__secondary-img(alt="",src="images/prod-img.png")
          img.product-slider__secondary-img(alt="",src="images/prod-img2.png")
          img.product-slider__secondary-img(alt="",src="images/prod-img.png")
          img.product-slider__secondary-img(alt="",src="images/prod-img2.png")
        .product-slider__main-slides
          img.product-slider__main-img(alt="",src="images/prod-img.png")
      .page-product__description-wrapper  
        .product-vie
          .product-vie__slider
          .product-vie__description
              .description__name= prodName
              .description__cost= prodCost
              .description__rating-wrapper
                .stars__wrapper
                  +star.stars__one
                  +star.stars__one
                  +star.stars__one
                  +star.stars__one
                  +star.stars__one
                  a(href='#')= NumberOfcustRev
                  div  Customer Review
              .description__short-wrapper
                .description__short-title Short Description:
                .description__short-text= shortDesc

              div
                .description__size-title Size:
                .description__size-wrapper 
                  each item in sizes
                    button.btn__size= item

              .description__btn-wrapper
                .description__count-wrapper 
                  button.btn__change-count.count-less -
                  .description__count 1
                  button.btn__change-count.count-more +
                .description__btn-buy-wrapper
                  button.btn__buyNow Buy NOW
                  button.btn__addToCart ADD TO CART
                  button.btn__like-box
                    svg.svg__like-box
                      use(xlink:href="images/icons/icons.svg#like")

              .description__info-wrapper
                .description__sku-wrapper
                  .description__info-title SKU:
                  .description__sku= sku
                .description__categories-wrapper
                  .description__info-title Categories: 
                  - var category = categories
                    each item in category 
                      a.description__link(href=`http://localhost:3000/${item}`)= item 
                .description__tags-wrapper
                  .description__info-title Tags: 
                    - var tag = tags
                    each item in tag 
                      a.description__link(href=`http://localhost:3000/${item}`)= item 
                  
              .description__share-wrapper 
                div Share this products:
                button.btn__facebook
                  svg.svg__facebook 
                    use(xlink:href="images/icons/icons.svg#Facebook")
                button.btn__twitter
                  svg.svg__twitter
                    use(xlink:href="images/icons/icons.svg#Twitter")
                button.btn__linkedIn
                  svg.svg__linkedIn 
                    use(xlink:href="images/icons/icons.svg#Linkedin")
                button.btn__mail
                  svg.svg__mail
                    use(xlink:href="images/icons/icons.svg#mail")
                    
    .page-product__full-description-wrapper
    .full-description__title-wrapper 
      button.btn__full-description.active__link Product Description
      button.btn__full-reviews
        div Reviews
        div !{'&nbsp'} !{'('}
        div= NumberOfcustRev
        div !{')'}

    .full-desctiption__text-wrapper
      .full-desctiption__text= commonDescr
      br
      .full-desctiption__text= commonDescrAdded
      h5.full-desctiption__subtitle  Living Room:
      .full-desctiption__text= livingRoomDescr
      h5.full-desctiption__subtitle Dining Room:
      .full-desctiption__text= diningRoomDescr
      h5.full-desctiption__subtitle Office:
      .full-desctiption__text= officeRoomDescr

